# Morning Star Academy - Environment Configuration Example
# Copy this file to .env and update the values for your environment

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,morningstaracademy.edu.gh
DJANGO_SETTINGS_MODULE=morning_star_academy.settings.development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DATABASE_URL=sqlite:///db.sqlite3
DB_NAME=morning_star_academy
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Morning Star Academy <noreply@morningstaracademy.edu.gh>
ADMIN_EMAIL=admin@morningstaracademy.edu.gh
SERVER_EMAIL=server@morningstaracademy.edu.gh

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=Africa/Accra

# =============================================================================
# PDF GENERATION CONFIGURATION
# =============================================================================

PDF_STORAGE_PATH=/tmp/pdfs/
PDF_CACHE_TIMEOUT=3600
WEASYPRINT_DPI=96
WEASYPRINT_OPTIMIZE_SIZE=True

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

CSRF_COOKIE_SECURE=False
CSRF_COOKIE_HTTPONLY=True
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_AGE=86400

# =============================================================================
# APPLICATION SPECIFIC SETTINGS
# =============================================================================

SCHOOL_NAME=Morning Star Academy
SCHOOL_ADDRESS=Tamale, Gbanyamli, Northern Region, Ghana
SCHOOL_PHONE=+233 XX XXX XXXX
SCHOOL_EMAIL=info@morningstaracademy.edu.gh
SCHOOL_WEBSITE=https://morningstaracademy.edu.gh

MAX_APPLICATIONS_PER_DAY=100
APPLICATION_DEADLINE=2024-12-31
ACADEMIC_YEAR=2024/2025
EMAIL_VERIFICATION_TIMEOUT=48
EMAIL_REMINDER_DAYS=3

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

LOG_LEVEL=INFO
LOG_FILE_PATH=logs/morning_star_academy.log

# =============================================================================
# STATIC AND MEDIA FILES
# =============================================================================

STATIC_URL=/static/
STATIC_ROOT=staticfiles/
MEDIA_URL=/media/
MEDIA_ROOT=media/

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
CACHE_TIMEOUT=300

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================

LANGUAGE_CODE=en-us
TIME_ZONE=Africa/Accra
USE_I18N=True
USE_L10N=True
USE_TZ=True

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

FILE_UPLOAD_MAX_MEMORY_SIZE=5242880
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880
ALLOWED_UPLOAD_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png