# Morning Star Academy - Environment Configuration Example
# Copy this file to .env and update the values for your environment

# =============================================================================
# DJANGO CORE SETTINGS (Required)
# =============================================================================
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,morningstaracademy.edu.gh
DJANGO_SETTINGS_MODULE=morning_star_academy.settings.development

# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================
# For development (SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL) - uncomment and configure
# DATABASE_URL=postgresql://user:password@localhost:5432/morning_star_academy

# =============================================================================
# EMAIL CONFIGURATION (Required for notifications)
# =============================================================================
# For development (console output)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production (SMTP) - uncomment and configure
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

DEFAULT_FROM_EMAIL=Morning Star Academy <info@morningstaracademy.edu.gh>

# =============================================================================
# SCHOOL INFORMATION (Required)
# =============================================================================
SCHOOL_NAME=Morning Star Academy
SCHOOL_ADDRESS=Tamale, Gbanyamli, Northern Region, Ghana
SCHOOL_PHONE=+233 XX XXX XXXX
SCHOOL_EMAIL=info@morningstaracademy.edu.gh

# =============================================================================
# APPLICATION SETTINGS (Optional)
# =============================================================================
MAX_APPLICATIONS_PER_DAY=50
ACADEMIC_YEAR=2024/2025

# =============================================================================
# LOCALIZATION (Optional)
# =============================================================================
TIME_ZONE=Africa/Accra
LANGUAGE_CODE=en-us

# =============================================================================
# FILE UPLOADS (Optional)
# =============================================================================
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880
ALLOWED_UPLOAD_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png

# =============================================================================
# PRODUCTION ONLY SETTINGS (Uncomment for production)
# =============================================================================
# DEBUG=False
# ALLOWED_HOSTS=morningstaracademy.edu.gh,www.morningstaracademy.edu.gh
# DJANGO_SETTINGS_MODULE=morning_star_academy.settings.production
# CSRF_COOKIE_SECURE=True
# SESSION_COOKIE_SECURE=True